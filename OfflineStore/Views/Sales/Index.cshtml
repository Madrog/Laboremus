@model IEnumerable<OfflineStore.Models.SalesRecord>

@{
    ViewBag.Title = "CSV Import";
}

<h2>Sales</h2>

<hr />
<fieldset>
    <legend>Upload</legend>
    @using (Html.BeginForm("Import", "Sales", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Raw(ViewBag.Error)
        <span>CSV file</span><input type="file" name="postedFile" />
        <br/>
        <input type="submit" value="Import" />
    }
</fieldset>


<hr/>

@if(Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsSold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRevenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalProfit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType)
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>



            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPriority)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.UnitsSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRevenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalProfit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>

        </tr>
        }

    </table>
}

